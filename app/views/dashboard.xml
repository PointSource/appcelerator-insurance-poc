<Alloy>
	<View>
		<View class="dashboardLaunchPad">
			<View class="dashboardRow" >
				<View class="dashboardGridCell">
					<Widget class="dashboardIconSvg" src="com.capnajax.vectorimage" svg="svg/main-profile.svg"/>
					<Label class="dashboardIconLabel">Profile</Label>
				</View>
				<View class="dashboardGridCell">
					<Widget class="dashboardIconSvg" src="com.capnajax.vectorimage" svg="svg/main-policies.svg"/>
					<Label class="dashboardIconLabel">Policies</Label>
				</View>
				<View class="dashboardGridCell" onClick="goToPayBill">
					<Widget class="dashboardIconSvg" src="com.capnajax.vectorimage" svg="svg/main-paybill.svg"/>
					<Label class="dashboardIconLabel">Pay Bill</Label>
				</View>
			</View>
			<View class="dashboardRow">
				<View class="dashboardGridCell">
					<Widget class="dashboardIconSvg" src="com.capnajax.vectorimage" svg="svg/main-maintenance.svg"/>
					<Label class="dashboardIconLabel">Auto Maintenance</Label>
				</View>
				<View class="dashboardGridCell">
					<Widget class="dashboardIconSvg" src="com.capnajax.vectorimage" svg="svg/main-inventory.svg"/>
					<Label class="dashboardIconLabel">Home Inventory</Label>
				</View>
				<View class="dashboardGridCell">
					<Widget class="dashboardIconSvg" src="com.capnajax.vectorimage" svg="svg/main-alerts.svg"/>
					<Label class="dashboardIconLabel">Notification Center</Label>
				</View>
			</View>
		</View>
		<View class="footer">
			<Widget class="footer-svg" src="com.capnajax.vectorimage" svg="svg/main-auton-no-rule.svg" style="svg/pointsource-blue-fill.css"/>
			<View class="footer-divider pointsource-blue-background"></View>
			<View class="auto-info">
				<Label class="auto-header footer-text pointsource-blue-text bold" fontSize="40">AUTO</Label>
				<Label class="footer-text pointsource-blue-text bold">2013 Volkswagen Jetta</Label>
				<Label class="footer-text gray-light-text ">Year: 2013\nModel: A4 QTR\nVIN: WALVJL564396200L68343</Label>
			</View>
		</View>
	</View>
