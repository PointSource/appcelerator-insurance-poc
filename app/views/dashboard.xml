<Alloy>
	<View class="dashboard">
		<View class="dashboard-agent">
			<View class="agent-photo-section">
				<ImageView class="agent-photo" image="/images/Point-Insurance-Agent-Photo-main.png"/>
			</View>
			<View class="agent-info-section">
				<View class="agent-info">
					<Label>YOUR POINT AGENT</Label>
					<Label>EVA JOHNSON</Label>
					<Label>1-800-555-1212 ext.123</Label>
				</View>
			</View>
		</View>
		<View class="dashboard-launch-pad">
			<View class="dashboard-row" >
				<View class="dashboard-grid-cell">
					<View class="dashboard-icon-wrapper">
						<Widget class="dashboard-icon-svg" src="com.capnajax.vectorimage" svg="svg/main-profile.svg"/>
						<Label class="dashboard-icon-label">Profile</Label>
					</View>
				</View>
				<View class="dashboard-grid-cell">
					<View class="dashboard-icon-wrapper">
						<Widget class="dashboard-icon-svg" src="com.capnajax.vectorimage" svg="svg/main-policies.svg"/>
						<Label class="dashboard-icon-label">Policies</Label>
					</View>
				</View>
				<View class="dashboard-grid-cell" onClick="goToPayBill">
					<View class="dashboard-icon-wrapper">
						<Widget class="dashboard-icon-svg" src="com.capnajax.vectorimage" svg="svg/main-paybill.svg"/>
						<Label class="dashboard-icon-label">Pay Bill</Label>
					</View>
				</View>
			</View>
			<View class="dashboard-row">
				<View class="dashboard-grid-cell">
					<View class="dashboard-icon-wrapper">
						<Widget class="dashboard-icon-svg" src="com.capnajax.vectorimage" svg="svg/main-maintenance.svg"/>
						<Label class="dashboard-icon-label">Auto Maintenance</Label>
					</View>
				</View>
				<View class="dashboard-grid-cell">
					<View class="dashboard-icon-wrapper">
						<Widget class="dashboard-icon-svg" src="com.capnajax.vectorimage" svg="svg/main-inventory.svg"/>
						<Label class="dashboard-icon-label">Home Inventory</Label>
					</View>
				</View>
				<View class="dashboard-grid-cell">
					<View class="dashboard-icon-wrapper">
						<Widget class="dashboard-icon-svg" src="com.capnajax.vectorimage" svg="svg/main-alerts.svg"/>
						<Label class="dashboard-icon-label">Notification Center</Label>
					</View>
				</View>
			</View>
		</View>
		<View class="footer">
			<View class="auto-image">
				<Widget class="auto-svg" src="com.capnajax.vectorimage" svg="svg/main-auton-no-rule.svg" style="svg/pointsource-blue-fill.css"/>
				<View class="footer-divider pointsource-blue-background"></View>
			</View>
			<View class="auto-info">
				<Label class="auto-header footer-text pointsource-blue-text bold" fontSize="40">AUTO</Label>
				<Label class="footer-text pointsource-blue-text bold">2013 Volkswagen Jetta</Label>
				<Label class="footer-text gray-light-text ">Year: 2013\nModel: A4 QTR\nVIN: WALVJL564396200L68343</Label>
			</View>
		</View>
	</View>
</Alloy>