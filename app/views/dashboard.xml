<Alloy>
	<Window class="container" title="Insurance POC">

		<RightNavButton platform="ios">
            <Button onClick="toggleMenu">menu</Button>
        </RightNavButton>

        <Menu platform="android">
            <MenuItem id="item1" title="Settings" onClick="toggleMenu" />
        </Menu>

		<View id="SlideMenu">
			<Label class="menuLabel">This is a menu</Label>
		</View>

		<View id="AppWrapper" class="dashboardLaunchPad">
			<View class="dashboardRow" >
				<View class="dashboardGridCell">
					<View class="dashboardIcon">
						<Widget class="dashboardIconSvg" src="com.capnajax.vectorimage" svg="svg/main-profile.svg" style="svg/gray-dark-fill.css"/>
					</View>
					<Label class="dashboardIconLabel">Profile</Label>
				</View>
				<View class="dashboardGridCell">
					<View class="dashboardIcon">
						<Widget class="dashboardIconSvg" src="com.capnajax.vectorimage" svg="svg/main-policies.svg" style="svg/gray-dark-fill.css"/>
					</View>
					<Label class="dashboardIconLabel">Policies</Label>
				</View>
				<View class="dashboardGridCell" onClick="goToPayBill">
					<View class="dashboardIcon">
						<Widget class="dashboardIconSvg" src="com.capnajax.vectorimage" svg="svg/main-paybill.svg" style="svg/gray-dark-fill.css"/>
					</View>
					<Label class="dashboardIconLabel">Pay Bill</Label>
				</View>
			</View>
			<View class="dashboardRow">
				<View class="dashboardGridCell">
					<View class="dashboardIcon">
						<Widget class="dashboardIconSvg" src="com.capnajax.vectorimage" svg="svg/main-maintenance.svg" style="svg/gray-dark-fill.css"/>
					</View>
					<Label class="dashboardIconLabel">Auto Maintenance</Label>
				</View>
				<View class="dashboardGridCell">
					<View class="dashboardIcon">
						<Widget class="dashboardIconSvg" src="com.capnajax.vectorimage" svg="svg/main-inventory.svg" style="svg/gray-dark-fill.css"/>
					</View>
					<Label class="dashboardIconLabel">Home Inventory</Label>
				</View>
				<View class="dashboardGridCell">
					<View class="dashboardIcon">
						<Widget class="dashboardIconSvg" src="com.capnajax.vectorimage" svg="svg/main-alerts.svg" style="svg/gray-dark-fill.css"/>
					</View>
					<Label class="dashboardIconLabel">Notification Center</Label>
				</View>
			</View>
		</View>
		<View class="footer">
			<Label class="footerText">2013 Volkswagen Jetta</Label>
		</View>
	</Window>
</Alloy>