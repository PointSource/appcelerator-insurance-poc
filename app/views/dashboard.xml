<Alloy>
	<Window class="container" title="Insurance POC">
		<RightNavButton>
            <Button>menu</Button>
        </RightNavButton>
		<View class="dashboardLaunchPad">
			<View class="dashboardRow" >
				<View class="dashboardGridCell">
					<View class="dashboardIcon">
						<Widget class="dashboardIconSvg" src="com.capnajax.vectorimage" svg="svg/bell.svg" style="svg/white-fill.css"/>
					</View>
					<Label class="dashboardIconLabel">Accident Help</Label>
				</View>
				<View class="dashboardGridCell">
					<View class="dashboardIcon">
						<Widget class="dashboardIconSvg" src="com.capnajax.vectorimage" svg="svg/cart.svg" style="svg/white-fill.css"/>
					</View>
					<Label class="dashboardIconLabel">Policies</Label>
				</View>
				<View class="dashboardGridCell" onClick="goToPayBill">
					<View class="dashboardIcon">
						<Widget class="dashboardIconSvg" src="com.capnajax.vectorimage" svg="svg/circle-check.svg" style="svg/white-fill.css"/>
					</View>
					<Label class="dashboardIconLabel">Pay Bill</Label>
				</View>
			</View>
			<View class="dashboardRow">
				<View class="dashboardGridCell">
					<View class="dashboardIcon">
						<Widget class="dashboardIconSvg" src="com.capnajax.vectorimage" svg="svg/flag.svg" style="svg/white-fill.css"/>
					</View>
					<Label class="dashboardIconLabel">Auto Maintenance</Label>
				</View>
				<View class="dashboardGridCell">
					<View class="dashboardIcon">
						<Widget class="dashboardIconSvg" src="com.capnajax.vectorimage" svg="svg/cog.svg" style="svg/white-fill.css"/>
					</View>
					<Label class="dashboardIconLabel">Home Inventory</Label>
				</View>
				<View class="dashboardGridCell">
					<View class="dashboardIcon">
						<Widget class="dashboardIconSvg" src="com.capnajax.vectorimage" svg="svg/dashboard.svg" style="svg/white-fill.css"/>
					</View>
					<Label class="dashboardIconLabel">Notification Center</Label>
				</View>
			</View>
		</View>
		<View class="footer">
			<Label class="footerText">2013 Volkswagen Jetta</Label>
		</View>
	</Window>
</Alloy>