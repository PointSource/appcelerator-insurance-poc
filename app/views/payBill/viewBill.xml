<Alloy>
	<View class="card top-card" layout="vertical">
		<View height="Ti.UI.SIZE" top="20">
			<Label id="autoIcon" class="icomoon-icon"></Label>
			<Label class="card-label header-3">{type}</Label>
		</View>
		<Label class="card-label small">AMOUNT OF</Label>
		<Label class="card-label header-1">{minimumDue}</Label>
		<Label class="card-label header-3 due-label">{formattedDueDate}</Label>
 
		<View children="{vehicle_data}" height="Ti.UI.SIZE" layout="vertical"/> 
 		
		<View children="{driver_data}" height="Ti.UI.SIZE" layout="vertical"/> 

		<Label class="card-label small">Policy No.</Label>
		<Label class="card-label header-2">{policyNumber}</Label>
		<!-- Spacer -->
		<View height="Ti.UI.SIZE">
			<Button class="button button-secondary" onClick="goToPayBill" top="10" bottom="20">PAY NOW</Button>
		</View>
	</View>
</Alloy>