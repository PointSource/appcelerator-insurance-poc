<Alloy>
	<Collection src="room"/>
	<Window id="index" class="container" title="HOME INVENTORY">
		<ActionBar/>
        <Menu platform="android"></Menu>

		<View id="AppWrapper">
			<TableView dataCollection="room">
				<TableViewRow layout="horizontal">
					<Label>{name}</Label>
					<Label>{value}</Label>
				</TableViewRow>

			</TableView>
		</View>
				<View>
					<View height="Ti.UI.SIZE" layout="vertical">
						<Label>TOTAL ESTIMATED VALUE</Label>
						<Label id="totalValue">Total Value</Label>
					</View>
				</View>
				<View bottom="0" height="Ti.UI.SIZE">
					<Button onClick="goToAddRoom">ADD ROOM</Button>
				</View>

	</Window>
</Alloy>