<Alloy>
	<Collection src="room"/>
	<Window id="index" class="container" title="HOME INVENTORY">
		<ActionBar/>
        <Menu platform="android"></Menu>

		<View id="AppWrapper" layout="vertical">
			<View height="Ti.UI.SIZE" layout="vertical" class="card">
				<Label>TOTAL ESTIMATED VALUE</Label>
				<Label id="totalValue">Total Value</Label>
			</View>
			<TableView dataCollection="room">
				<TableViewRow>
					<View class="card">
						<View layout="horizontal" height="Ti.UI.SIZE" left="10">
							<Label class="bold">{name}</Label>
							<Label class="item-count">(### items)</Label>
						</View>
						<Label right="10">{value}</Label>
					</View>
				</TableViewRow>
			</TableView>

			<View height="Ti.UI.SIZE">
				<Button class="button" onClick="goToAddRoom">ADD ROOM</Button>
			</View>

		</View>
				

	</Window>
</Alloy>