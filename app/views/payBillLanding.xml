<Alloy>
	<Window id="payBillLanding" class="container" title="YOUR BILL">
		<View id="AppWrapper">

			<View layout="vertical">
				<View class="card top-card" layout="vertical">
					<View height="Ti.UI.SIZE" top="20">
						<Label id="autoIcon" class="icomoon-icon"></Label>
						<Label class="card-label header-3">AUTO</Label>
					</View>
					<Label class="card-label small">AMOUNT OF</Label>
					<Label class="card-label header-1">$176.59</Label>
					<Label class="card-label header-3 due-label">DUE MARCH 05, 2016</Label>
					<Label class="card-label small">Vehicle(s)</Label>
					<Label class="card-label header-2">Volkswagen Jetta 2014</Label>
					<Label class="card-label small">Driver(s)</Label>
					<Label class="card-label header-2">Hunter Patterson</Label>
					<Label class="card-label small">Policy No.</Label>
					<Label class="card-label header-2">12345678</Label>
					<!-- Spacer -->
					<View height="60"/>
				</View>
				<View height="Ti.UI.SIZE">
					<Button class="button button-secondary" onClick="goToPayBill" top="10">PAY NOW</Button>
				</View>
			</View>
		</View>
	</Window>
</Alloy>