<Alloy>
	<Collection src="policy"/>
	<Window id="viewBills" class="container" title="Your Bills">
		<View id="AppWrapper">
			<Label id="noBillsMessage"></Label>
			<ScrollView id="billList" layout="vertical" scrollType="vertical" dataCollection="policy" dataTransform="formatPolicy" dataFilter="filterPolicies">
				<View platform="ios" class="card" layout="vertical" bottom="{bottom}">
					<Require src="billing/billInfo"/>
				</View>
				<View platform="android" height="Ti.UI.SIZE" layout="vertical">
					<CardView backgroundColor="{backgroundColor}">
						<Require src="billing/billInfo"/>
					</CardView>
					<!-- Spacer -->
					<View height="{bottom}"></View>
				</View>
			</ScrollView>
		</View>
	</Window>
</Alloy>