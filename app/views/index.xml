<Alloy>
	<Window platform="android,windows" id="index" class="container" title="Insurance POC">
		<ActionBar/>
        <Menu platform="android" id="androidMenu"></Menu>

        <Widget src="menu" id="menu"></Widget>

		<View id="AppWrapper">
			<Require src="dashboard" /> 
		</View>
	</Window>

    <!-- iOS Window -->
    <NavigationWindow id="nav" platform="ios">
    	<Window class="container" title="">
			<LeftNavButton platform="ios">
				<Widget class="logo-svg" src="com.capnajax.vectorimage" svg="svg/point-insurance-logo.svg"/>
	        </LeftNavButton>

			<RightNavButton platform="ios">
				<View onClick="toggleMenu">
					<Widget class="menu-svg" src="com.capnajax.vectorimage" svg="svg/menu.svg" style="svg/pointsource-blue-fill.css"/>
				</View>
	        </RightNavButton>

	        <Widget src="menu" id="menu"></Widget>

			<View id="AppWrapper">
		    	<Require src="dashboard" />
			</View>
	    </Window>
    </NavigationWindow>

</Alloy>