<Alloy>
	<Window id="payBillWindow" class="container" title="PAY BILL">
		<View id="AppWrapper">
			<View layout="vertical">
				<View class="input-wrapper">
					<Label class="form-label">Scan your card</Label>
				</View>
				<View class="card-scan-wrapper" onClick="openCardIO">
			        <Label id="cameraIcon" class="icomoon-icon"></Label>
					<Label class="card-scan-label">TAP TO SCAN</Label>
				</View>
				<View class="input-wrapper">
					<Label class="form-label">Or enter your card info</Label>
				</View>

				<View class="input-wrapper">
			        <TextField id="cardNumberField"  hintText="Card number" />
			    </View>
				<View class="input-wrapper">
			        <TextField id="cardholderNameField" hintText="Cardholder name" />
			    </View>
				<View class="input-wrapper">
			        <TextField id="postalCodeField"  hintText="Postal code" />
			    </View>
				<View class="input-wrapper">
			        <TextField id="cvvField"  hintText="CVV" />
			    </View>

				<View height="Ti.UI.SIZE">
			        <Button class="button" top="10" bottom="10" onClick="submit">SUBMIT PAYMENT</Button>
				</View>
			</View>
		</View>
	</Window>
</Alloy>
