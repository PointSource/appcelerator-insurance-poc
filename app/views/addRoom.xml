<Alloy>
	<Window id="addRoom" class="container" title="ADD ROOM">
		<ActionBar/>
        <Menu platform="android"></Menu>

		<View id="AppWrapper">
	        <Widget id="camera" src="ts.camera" onPictureTaken="onPictureTaken" backgroundColor="red" />

			<View class="camera-overlay" top="0">
				<View class="input-wrapper">
					<Label class="form-label">Take photos of your valuables</Label>
				</View>
				<View class="input-wrapper">
					<TextField id="nameInput" hintText="Room name"></TextField>
				</View>
				<View class="input-wrapper">
					<TextField id="valueInput" hintText="Estimated value"></TextField>
				</View>
			</View>

	        <View class="camera-overlay" bottom="0">
	        	<View class="camera-button-overlay">
			        <View class="camera-button" onClick="takePicture"></View>
	        	</View>
		        <ScrollView id="imagePreview"></ScrollView>
				<Button class="button submit-button" onClick="addRoom">Submit</Button>
	        </View>
        
		</View>

	</Window>
</Alloy>