<Alloy>
	<Window id="addRoom" class="container" title="ADD ROOM">
		<ActionBar/>
        <Menu platform="android"></Menu>

		<View id="AppWrapper">
			<View layout="vertical" height="Ti.UI.SIZE" top="0" zIndex="10" backgroundColor="#eeeeee">
				<View class="input-wrapper">
					<Label class="form-label">Take photos of your valuables</Label>
				</View>
				<View class="input-wrapper">
					<TextField id="nameInput" hintText="Room name"></TextField>
				</View>
				<View class="input-wrapper">
					<TextField id="valueInput" hintText="Estimated value"></TextField>
				</View>
			</View>
	        <Widget id="camera" src="ts.camera" onPictureTaken="onPictureTaken" /> 

	        <View layout="vertical" bottom="0" height="Ti.UI.SIZE">
		        <Button class="button camera-button" onClick="takePicture">Take Picture</Button>
		        <View id="imagePreview"></View>
				<Button class="button submit-button" onClick="addRoom">Submit</Button>
	        </View>
        
		</View>

	</Window>
</Alloy>