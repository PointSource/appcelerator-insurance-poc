<Alloy>
	<View class="input-wrapper">
		<Label class="form-label">Edit room</Label>
	</View>
	<View class="input-wrapper">
		<TextField id="nameInput" hintText="Room name" value="{name}"></TextField>
	</View>
	<View class="input-wrapper">
		<TextField id="valueInput" hintText="Estimated value" value="{value}"></TextField>
	</View>
	<Button class="button" onClick="saveRoom">Submit</Button>
</Alloy>