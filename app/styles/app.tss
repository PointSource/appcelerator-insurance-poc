/*

This is your global styles file. Selectors and rules you define
here will be applied throughout your app. However, these rules
have the lowest priority of any style settings.

For more information, see the "Style Priorities" section of
http://docs.appcelerator.com/platform/latest/#!/guide/Alloy_Styles_and_Themes

*/

/* Platform-specific settings */

"Window[platform=ios]" : { 
	statusBarStyle: Titanium.UI.iPhone.StatusBar.LIGHT_CONTENT
}


/* Colors */

"Window": {
	titleAttributes:  {
        color: "white"
	},
	barColor: "#282828",
	backgroundColor: '#eeeeee'
}

".gray-light-text": {
	color: "#eeeeee"
}

".pointsource-blue-text": {
	color: "#49a7f7"
}

".pointsource-blue-background": {
	backgroundColor: "#49a7f7"
}

/* Buttons */

".button": {
	left: 10,
	right: 10,
	height: 50,
	color: "#282828",
	backgroundColor: "#9ad275"
}


/* Typography */

"Label": {
	color: "#282828",
	font: {
		fontFamily: "OpenSans"
	}
}

".bold": {
	font: {
		fontFamily: "OpenSans-Semibold"
	}
}

".header-1": {
	font: {
		fontSize: 30,
		fontFamily: "OpenSans-Semibold"
	}
}

".header-2": {
	font: {
		fontSize: 18,
		fontFamily: "OpenSans-Semibold"
	}
}


/* Grid */

".row": {
	layout: 'horizontal',
	width: Titanium.UI.FILL
}

".columns-4": {
	width:'33%'
}

".columns-6": {
	width:'50%'
}


/* Icon font */

".icomoon-icon": {
	font: {
		fontFamily: "icomoon"
	}
}


/* Dividers */

".horizontal-divider": {
	height: 1,
	width: Ti.UI.FILL,
	accessibilityHidden: true,
	bottom: 0
}

".vertical-divider": {
	height: Ti.UI.FILL,
	width: 1,
	accessibilityHidden: true,
	right: 0
}

/* Card Layout */

".card": {
	backgroundColor: "#ffffff",
	height: 60,
	top: 10
}

".card[platform=ios]": {
	viewShadowRadius: 2,
	viewShadowColor: "#b2b2b2",
	viewShadowOffset: "(0,0)"
}

".card-label": {
	width: Ti.UI.FILL,
	left: 10
}

/* Forms */
".input-wrapper": {
	backgroundColor: "white",
	width: Ti.UI.FILL,
	height: Ti.UI.SIZE,
	top:1
}

".form-label": {
	height: 50,
	width: Ti.UI.FILL,
	left: 10
}

"TextField": {
	width: Ti.UI.FILL,
	backgroundColor: "transparent",
	height: 50,
	left: 10,
	color: "#282828",
	hintTextColor: "#b2b2b2"
}

/* Nav Bar */

".header-icon": {
	font: {
		fontSize: 30
	},
	color: "#49a7f7"
}