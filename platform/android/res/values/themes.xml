<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.DrawerLayout" parent="@style/_drawer"/>
    <style name="Theme.RegularLayout" parent="@style/_base"/>
        
    <style name="_drawer" parent="@style/Theme.AppCompat.Light.NoActionBar">
      	<item name="colorPrimary">@color/primary</item>
		<!-- This item is required for Android 2.3.x support -->
		<item name="actionBarStyle">@style/ActionBar.Style</item>
	    <item name="android:textViewStyle">@style/TextView.Style</item>

      	<item name="android:windowTranslucentStatus">true</item>
	    <item name="drawerArrowStyle">@style/DrawerArrowToggle.Style</item>

    </style>

	<style name="_base" parent="@style/Theme.AppCompat">
      	<item name="colorPrimary">@color/primary</item>
		<!-- This item is required for Android 2.3.x support -->
		<item name="actionBarStyle">@style/ActionBar.Style</item>
		<!-- Specify an Action Bar style to use -->
		<item name="android:actionBarStyle">@style/ActionBar.Style</item>
	    <item name="android:textViewStyle">@style/TextView.Style</item>

	    <item name="actionBarTheme">@style/ActionBar.Theme</item>
	</style>

	<style name="TextView.Style" parent="android:Widget.TextView">
	    <item name="android:lineSpacingMultiplier">0.9</item>
	</style>

	<style name="ActionBar.Theme" parent="@style/ThemeOverlay.AppCompat.ActionBar">       
	    <!-- Color the back arrow! -->
	    <item name="colorControlNormal">@color/pointsourceBlue</item>
	</style>

	<style name="ActionBar.Style" parent="@style/Widget.AppCompat.ActionBar">
		<!-- For Android 3.x and later, you can specify either a color or background image -->
		<item name="android:background">@color/grayVeryDark</item>
	</style>

	<style name="DrawerArrowToggle.Style" parent="Widget.AppCompat.DrawerArrowToggle">
	    <item name="spinBars">false</item>
	    <item name="color">@color/pointsourceBlue</item>
	</style>
	
</resources>